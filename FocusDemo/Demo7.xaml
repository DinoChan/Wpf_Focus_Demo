<UserControl x:Class="FocusDemo.Demo7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FocusDemo"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.DataContext>
        <local:Demo1ViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid Width="300"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.Resources>
                <Style BasedOn="{StaticResource {x:Type Control}}"
                       TargetType="TextBox">
                    <Setter Property="local:FocusService.AutoFocusWhenValidationError"
                            Value="True" />
                </Style>
            </Grid.Resources>
            <StackPanel>
                <TextBox x:Name="AddressTextBox" />
                <TextBox x:Name="NameTextBox"
                         Text="{Binding Name, Mode=TwoWay,NotifyOnValidationError=True}" />
                <Button Margin="5"
                        Command="{Binding SubmitCommand}"
                        Content="Submit" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
